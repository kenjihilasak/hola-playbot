<context>
  <input pattern="(hola|buenas) *">
    <output>
      <item>"Hola $UserName!" if="full($UserName)"</item>
      <item>"Como estás $UserName!" if="full($UserName)"</item>
      <item>"Buenos días $UserName!" if="full($UserName)"</item>  
    </output>
     
    <context if="empty($UserName)">
      <output value="hola! Cuál es tu nombre?"/>

      <input pattern="$Text">
        <var name="UserName" value="$Text" scope="user"/>
        <output value="Mucho gusto $UserName!"/>
      </input>

    </context>
  </input>
</context>
